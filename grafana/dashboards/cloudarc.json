{
  "__inputs": [],
  "__requires": [],
  "annotations": { "list": [] },
  "description": "CloudArc API â€” HTTP traffic, latency, and Node.js runtime metrics",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [

    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100, "title": "HTTP Traffic", "type": "row" },

    {
      "id": 1,
      "title": "Request Rate (req/s)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area", "textMode": "auto" },
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 50 },
            { "color": "red", "value": 200 }
          ]}
        }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "sum(rate(http_requests_total[1m]))",
        "legendFormat": "req/s",
        "refId": "A"
      }]
    },

    {
      "id": 2,
      "title": "Error Rate (4xx + 5xx %)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area", "textMode": "auto" },
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 1 },
            { "color": "red", "value": 5 }
          ]}
        }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "100 * sum(rate(http_requests_total{status_code=~\"[45]..\"}[1m])) / (sum(rate(http_requests_total[1m])) + 0.001)",
        "legendFormat": "error %",
        "refId": "A"
      }]
    },

    {
      "id": 3,
      "title": "P95 Latency",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area", "textMode": "auto" },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 0.5 },
            { "color": "red", "value": 1 }
          ]}
        }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[5m])) by (le))",
        "legendFormat": "p95",
        "refId": "A"
      }]
    },

    {
      "id": 4,
      "title": "Total Requests (last hour)",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "none", "textMode": "auto" },
      "fieldConfig": { "defaults": { "unit": "short" } },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "increase(http_requests_total[1h])",
        "legendFormat": "requests",
        "refId": "A"
      }]
    },

    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101, "title": "Request Duration", "type": "row" },

    {
      "id": 5,
      "title": "Latency Percentiles (P50 / P95 / P99)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 14, "x": 0, "y": 6 },
      "options": { "tooltip": { "mode": "multi" } },
      "fieldConfig": {
        "defaults": { "unit": "s", "custom": { "lineWidth": 2, "fillOpacity": 5 } }
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "p95",
          "refId": "B"
        },
        {
          "datasource": "Prometheus",
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket[1m])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ]
    },

    {
      "id": 6,
      "title": "Requests by Status Code",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 10, "x": 14, "y": 6 },
      "options": { "tooltip": { "mode": "multi" } },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "custom": { "lineWidth": 2, "fillOpacity": 10 } }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "sum by (status_code) (rate(http_requests_total[1m]))",
        "legendFormat": "{{status_code}}",
        "refId": "A"
      }]
    },

    { "collapsed": false, "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102, "title": "Node.js Runtime", "type": "row" },

    {
      "id": 7,
      "title": "Heap Memory",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 12, "x": 0, "y": 15 },
      "options": { "tooltip": { "mode": "multi" } },
      "fieldConfig": {
        "defaults": { "unit": "bytes", "custom": { "lineWidth": 2, "fillOpacity": 10 } }
      },
      "targets": [
        {
          "datasource": "Prometheus",
          "expr": "nodejs_heap_size_used_bytes{app=\"cloudarc-api\"}",
          "legendFormat": "Used",
          "refId": "A"
        },
        {
          "datasource": "Prometheus",
          "expr": "nodejs_heap_size_total_bytes{app=\"cloudarc-api\"}",
          "legendFormat": "Total",
          "refId": "B"
        }
      ]
    },

    {
      "id": 8,
      "title": "Event Loop Lag",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 6, "x": 12, "y": 15 },
      "options": { "tooltip": { "mode": "single" } },
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "custom": { "lineWidth": 2, "fillOpacity": 10 },
          "color": { "mode": "thresholds" },
          "thresholds": { "mode": "absolute", "steps": [
            { "color": "green", "value": null },
            { "color": "yellow", "value": 0.05 },
            { "color": "red", "value": 0.1 }
          ]}
        }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "nodejs_eventloop_lag_seconds{app=\"cloudarc-api\"}",
        "legendFormat": "lag",
        "refId": "A"
      }]
    },

    {
      "id": 9,
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": { "h": 7, "w": 6, "x": 18, "y": 15 },
      "options": { "tooltip": { "mode": "single" } },
      "fieldConfig": {
        "defaults": { "unit": "percentunit", "custom": { "lineWidth": 2, "fillOpacity": 10 } }
      },
      "targets": [{
        "datasource": "Prometheus",
        "expr": "rate(process_cpu_seconds_total{app=\"cloudarc-api\"}[1m])",
        "legendFormat": "CPU",
        "refId": "A"
      }]
    }

  ],
  "refresh": "10s",
  "schemaVersion": 38,
  "tags": ["cloudarc", "nodejs", "api"],
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": {},
  "timezone": "browser",
  "title": "CloudArc API",
  "uid": "cloudarc-api-v1",
  "version": 1
}
