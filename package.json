{
  "name": "cloudarc-api",
  "version": "1.0.0",
  "description": "CloudArc â€” Industry-structured REST API with Express, PostgreSQL, and Redis. DevOps-ready.",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --forceExit --detectOpenHandles",
    "test:ci": "jest --forceExit --detectOpenHandles --ci --coverage",
    "migrate": "node-pg-migrate -m migrations up",
    "migrate:down": "node-pg-migrate -m migrations down 0",
    "migrate:create": "node-pg-migrate -m migrations create",
    "seed": "node src/database/seed.js"
  },
  "keywords": [
    "express",
    "postgresql",
    "redis",
    "rest-api",
    "devops"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@sentry/node": "^10.39.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "node-pg-migrate": "^8.0.4",
    "pg": "^8.13.1",
    "prom-client": "^15.1.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
